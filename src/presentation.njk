---
layout: base
pagination:
    data: entries.presentations
    size: 1
    alias: document
    addAllPagesToCollections : true
permalink: /talks/{{ document.slug }}/
eleventyComputed:
  title: "{{ document.title }}"
  tags: {{ document.tags }}
---
<div class="region content-main">
  <article class="group" datetime="{{ document.date }}">

    <footer>
      <div class="article-meta">
        {% if document.originalSource %}
          {% set source = document.originalSource %}
          <p>Presented at <a href="{{ source.fields.url }}">{{ source.fields.publication }}</a>{% if source.fields.date %}<time>{{ source.fields.date }}</time>{% endif %}</p>
        {% endif %}
      </div>
    </footer>

    <header>
      <h2 class="hed-article-title">{{ title | safe }}</h2>
      <p class="article-lead">{{ document.dek | safe }}</p>
    </header>

    <section class="article-content">
      {% if document.video %}
      <h3>Video</h3>
      <div class="embed-video">
        <iframe src="{{ document.video }}" width="640" height="360" frameborder="0" allow="autoplay; fullscreen" allowfullscreen=""></iframe>
      </div>
      {% endif %}

      {% if document.slideshare %}
      <h3>Slides</h3>
      <iframe src="{{ document.slideshare }}" width="595" height="485" frameborder="0" marginwidth="0" marginheight="0" scrolling="no" style="border:1px solid #CCC; border-width:1px; margin-bottom:5px; max-width: 100%;" allowfullscreen=""> </iframe>
      {% endif %}

      <h3>Transcript</h3>

      <ol class="slide-list">
      {% for slide in document.slides %}
        {% include "components/slide.njk" %}
      {% endfor %}
      </ol>
    </section>

    {% if document.citations %}
      <section class="article-citations">
        <h2 class="hed-section-sub">Citations</h2>

        <ul class="teaser-list">
          {% for source in document.citations %}
            {% include 'teasers/source.njk' %}
          {% endfor %}
        </ul>
      </section>
    {% endif %}

  </article>
</div>
